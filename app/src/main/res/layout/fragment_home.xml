<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/musicMenuButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:text="@string/music_button"
        app:layout_constraintEnd_toStartOf="@+id/breathingMenuButton"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/helpMenuButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:text="@string/help_button"
        app:layout_constraintEnd_toEndOf="@+id/breathingMenuButton"
        app:layout_constraintStart_toEndOf="@+id/musicMenuButton"
        app:layout_constraintTop_toTopOf="@+id/jokesMenuButton" />

    <Button
        android:id="@+id/jokesMenuButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/mainColor"
        android:text="@string/jokes_button"
        app:layout_constraintEnd_toEndOf="@+id/musicMenuButton"
        app:layout_constraintStart_toStartOf="@+id/musicMenuButton"
        app:layout_constraintTop_toBottomOf="@+id/musicMenuButton" />

    <Button
        android:id="@+id/breathingMenuButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/mainColor"
        android:text="@string/breathe_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/musicMenuButton"
        app:layout_constraintTop_toTopOf="@+id/musicMenuButton" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771" />
</androidx.constraintlayout.widget.ConstraintLayout>